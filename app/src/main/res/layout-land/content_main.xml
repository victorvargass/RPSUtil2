<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="horizontal"
    tools:context="victorvs.com.rpsutil2.MainActivity"
    tools:showIn="@layout/activity_main"
    android:gravity="top|center_vertical|center_horizontal"
    android:paddingTop="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL: "
                    android:id="@+id/textView3"
                    android:textSize="20dp"
                    android:layout_column="0"
                    android:textStyle="bold" />

                <TextView
                    android:text="$ 0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView_total"
                    android:textColor="#226d16"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horas:"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView_fechas"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="11dp"
                    android:layout_column="1"
                    android:layout_marginRight="20dp" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_horas"
            android:layout_gravity="center_horizontal"
            android:hint="Inserte hora de ingreso"
            android:maxLength="13" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:id="@+id/calendar"
                    android:onClick="mostrarCalendario"
                    android:focusable="true"
                    android:textSize="15dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descuento:"
                    android:id="@+id/textView2"
                    android:layout_column="0"/>

            </TableRow>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="S/D"
                        android:id="@+id/button_sd"
                        android:layout_column="0"
                        android:clickable="false"
                        android:background="@color/dim_foreground_disabled_material_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.30" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="50%"
                        android:id="@+id/button_50"
                        android:layout_column="3"
                        android:clickable="false"
                        android:background="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="0.30" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="75%"
                        android:id="@+id/button_75"
                        android:layout_column="6"
                        android:clickable="false"
                        android:background="@android:color/holo_orange_light"
                        android:textStyle="bold"
                        android:layout_weight="0.30" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView_precio"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_column="2"
                    android:gravity="center" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="NÂ° boleta actual:"
                        android:id="@+id/textView5"
                        android:layout_column="0"
                        android:textSize="11dp"
                        android:textIsSelectable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/num_boleta"
                        android:layout_weight="0.87"
                        android:layout_column="2" />
                </TableRow>
            </TableLayout>


        </TableLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="DEL"
                android:id="@+id/button_del"
                android:layout_column="0"
                android:textColor="#ffffff"
                android:backgroundTintMode="src_over"
                android:background="#d36d07" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="AC"
                android:id="@+id/button_ac"
                android:layout_column="1"
                android:textColor="#ffffff"
                android:background="#d36d07"
                android:layout_span="2" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="7"
                android:id="@+id/button7"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="8"
                android:id="@+id/button8"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="9"
                android:id="@+id/button9"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="4"
                android:id="@+id/button4"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="5"
                android:id="@+id/button5"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="6"
                android:id="@+id/button6"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="1"
                android:id="@+id/button1"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="2"
                android:id="@+id/button2"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="3"
                android:id="@+id/button3"
                android:layout_column="2" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="0"
                android:id="@+id/button0"
                android:layout_column="0"
                android:layout_span="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Guardar"
                android:id="@+id/button_guardar"
                android:layout_column="2"
                android:background="@color/accent_material_light"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>


</LinearLayout>